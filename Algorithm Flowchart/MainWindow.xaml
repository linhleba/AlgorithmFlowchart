<Window x:Class="Algorithm_Flowchart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Algorithm_Flowchart"
        mc:Ignorable="d"
        Title="Flowchart" Height="450" Width="800">

    <Window.Resources>



        <ControlTemplate x:Key="MoveThumbTemplate" TargetType="{x:Type local:MoveThumb}">
            <Rectangle Fill="Transparent"/>
        </ControlTemplate>
         
        
        <!-- Design cursor and presenter -->
        <ControlTemplate x:Key="DesignShape" TargetType="ContentControl">
            <Grid>
                <local:MoveThumb DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}" 

                Cursor="SizeAll"/>
                <ContentPresenter Content="{TemplateBinding ContentControl.Content}"/>
            </Grid>
        </ControlTemplate>

    </Window.Resources>
    
    <Canvas>
        <!-- Draw circle-->
        <ContentControl
            Width="100" Height="100" Canvas.Top="0" Canvas.Left="0"
                    Template="{StaticResource DesignShape}"> 
            <Ellipse Fill="Red"
                     IsHitTestVisible="False"></Ellipse>
        </ContentControl>
        
        <!-- Draw rectangle-->
        <ContentControl
            Width="100" Height="60" Canvas.Top="120" Canvas.Left="0"
            Template="{StaticResource DesignShape}">
            <Rectangle Fill="Aqua" IsHitTestVisible="False">
            </Rectangle>
        </ContentControl>
        
        <!-- Draw -->
        <ContentControl Width="130"
                    MinWidth="50"
                    Height="130"
                    MinHeight="50"
                    Canvas.Top="200"
                    Canvas.Left="0"
                    Template="{StaticResource DesignShape}">

            <Path Fill="Blue"
            Data="M 0,5 5,0 10,5 5,10 Z"
            Stretch="Fill"
            IsHitTestVisible="False"/>
        </ContentControl>



    </Canvas>
    
</Window>
