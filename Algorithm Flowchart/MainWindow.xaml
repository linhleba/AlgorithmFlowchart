        Icon="./Resources/Images/logo1.jpg" 
        MinWidth="600" MinHeight="600">

    <DockPanel Background="FloralWhite" >        
        <Algorithm_Flowchart:MenuBar  DockPanel.Dock="Top"
                HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Margin="0,0,0,0.4" />
        <Grid DockPanel.Dock="Left">
            <Algorithm_Flowchart:ShapeToolUI  
                HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Margin="0,0,0,0.4" Width="140" Height="200"/>
            <GridSplitter Height="5"/>
            <Algorithm_Flowchart:ShapeToolUI  
                HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Margin="0,0,0,0.4" Width="140"/>
        </Grid>


        <Canvas x:Name="Canvas" Background="#FFBCE6FF" DockPanel.Dock="Bottom">   

        </Canvas>
        
    </DockPanel>

