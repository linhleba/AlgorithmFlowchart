<Window x:Class="Algorithm_Flowchart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Algorithm_Flowchart"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>

        <ControlTemplate x:Key="MoveThumbTemplate" TargetType="{x:Type local:MoveThumb}">
            <Rectangle Fill="Transparent"/>
        </ControlTemplate>


        <ControlTemplate x:Key="DesignerItemTemplate" TargetType="ContentControl">
            <Grid>
                <local:MoveThumb DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}" 

                 Cursor="SizeAll"/>
                <ContentPresenter Content="{TemplateBinding ContentControl.Content}"/>
            </Grid>
        </ControlTemplate>

    </Window.Resources>
    
    <Canvas>
        
        <ContentControl
            Width="200" Height="200" Canvas.Top="100" Canvas.Bottom="100"
                     Template="{StaticResource DesignerItemTemplate}">
            <Ellipse Fill="Red"
                     IsHitTestVisible="False"></Ellipse>
        </ContentControl>
        
        

    </Canvas>
    
</Window>
